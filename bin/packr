#!/usr/bin/env python
# -*- coding: utf-8 -*
"""
Usage: packr [options]

-d, --destination <path>    Installation destination. Defaults to
                            /usr/share/python/<package-name> 
-p, --python <path>         <path> to python version to use
-u, --user <name>           User. Defaults to <package-name>   
-s, --source <path>         <path> to python project to pack using packr
-o, --output <path>         Where the package is created. Defaults to parent dir

"""

import sys

from docopt import docopt
from packr import Packr

def main():
    args = docopt(__doc__, version='0.1.1rc')

    srcdir = args['--source']
    destdir = args['--destination']
    user = args['--user']
    python = args['--python']
    output = args['--output']

    packr = Packr(srcdir=srcdir, destdir=destdir, user=user,
                                 python=python, output=output)
    packr.setup()
    packr.build()

if __name__ == '__main__':
    sys.exit(main() or 0)

